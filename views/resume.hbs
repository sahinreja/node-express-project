    <div class="container non-printable" id="cv-form">
        <form action="" onsubmit="event.preventDefault();generateCv()">
            <h1 class="text-center my-2">Resume Generator</h1>
            <p class="text-center">By TeamNoobs Coading...</p>
            <div class="row">
                <div class="col-md-6 col-12 mx-auto">
                    <h3>Personal Information</h3>
                    <!-- <form action=""> -->
                    <div class="form-group mb-3">
                        <label for="name">Your Name</label>
                        <input type="text" id="name" placeholder="Enter here" class="form-control" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="contact">Your Contact</label>
                        <input type="text" id="contact" placeholder="Enter here" class="form-control" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="address">Your Address</label>
                        <textarea name="" id="address" cols="30" placeholder="Enter here" class="form-control" rows="5"
                            required></textarea>
                    </div>
                    <p class="text-secondary">Important Links</p>
                    <div class="form-group">
                        <label for="linkedin">LinkedIn</label>
                        <input type="text" id="linkedin" placeholder="Enter here" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="github">Github</label>
                        <input name="" id="github" placeholder="Enter here" class="form-control" required>
                    </div>
                    <!-- </form> -->
                </div>
                <div class="col-md-6 col-12 mx-auto">
                    <h3>Professional Information</h3>

                    <div class="form-group mb-3">
                        <label for="">Objective</label>
                        <textarea name="" id="objective" cols="30" placeholder="Enter here" rows="5"
                            class="form-control" required></textarea>
                    </div>
                    <div class="form-group mb-3" id="weField">
                        <label for="">Work Experience</label>
                        <textarea name="" rows="5" required placeholder="Enter here" class="form-control we" ></textarea>
                        {{!-- <div class="container text-center mt-2 " id="workBtn">
                            <button onclick="addNewWkField()" class="btn btn-dark" style="width: 20%;">Add</button>
                        </div> --}}
                    </div>
                    <div class="form-group mb-3" id="aqField">
                        <label for="">Accademic Qualification</label>
                        <textarea name="" rows="5" required placeholder="Enter here" class="form-control aq" ></textarea>
                        {{!-- <div class="container text-center mt-2" id="aqBtn">
                            <button onclick="addNewAqField()" class="btn btn-dark" style="width: 20%;">Add</button>
                        </div> --}}
                    </div>

                </div>
            </div>

            <center>
                <button type="submit" class="btn btn-success" style="width: 20%;">Generate Resume</button>
            </center>

        </form>
