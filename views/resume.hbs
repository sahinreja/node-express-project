        }

        a {
            text-decoration: none;
            color: #555;
        }

        a:hover {
            color: #555;
        }

        p {
            color: #555;
        }

        .bt_print {
            background-color: royalblue;
            color: #ffffff;
            padding: 0.8rem 1.8rem !important;
        }

        .printable {
            display: none;
        }

